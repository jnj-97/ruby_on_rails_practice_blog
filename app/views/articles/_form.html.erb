<%= form_with model: article, style: "width: 400px; padding: 20px; border: 1px solid #ccc; border-radius: 6px; background: #f9f9f9; font-family: sans-serif;" do |form| %>

  <% if article.errors.any? %>
    <h2 style="color: #b30000; font-size: 18px; margin-bottom: 10px;">
      <%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:
    </h2>

    <ul style="margin-bottom: 20px; padding-left: 20px;">
      <% article.errors.full_messages.each do |message| %>
        <li style="color: #b30000; font-size: 14px; margin-bottom: 5px;"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :title, style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= form.text_field :title, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :content, style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= form.text_area :content, style: "width: 100%; height: 120px; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div>
    <%= form.submit "Save Article", style: "background: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>

<% end %>
