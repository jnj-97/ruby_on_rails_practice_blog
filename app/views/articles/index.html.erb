<h1 style="font-family: sans-serif; margin-bottom: 20px;">Just testing</h1>

<ol style="list-style-type: none; padding: 0; font-family: sans-serif;">

  <% @articles.each do |article| %>
    <li style="border: 1px solid #ddd; border-radius: 6px; padding: 15px; margin-bottom: 15px; background: #fafafa;">

      <h2 style="margin: 0 0 10px 0; font-size: 20px;">
        <a href="articles/<%= article.id %>" style="text-decoration: none; color: #007bff;">
          <%= article.title %>
        </a>
      </h2>

      <p style="margin: 0 0 10px 0; font-size: 14px; color: #333;">
        <%= article.content %>
      </p>

      <p style="margin: 0 0 10px 0;">
        <a href="articles/<%= article.id %>/edit" style="color: #555; text-decoration: underline;">
          Edit Article
        </a>
      </p>

      <%= button_to "Delete Article",
            delete_article_path(article.id),
            method: :delete,
            style: "background: #dc3545; color: white; padding: 6px 12px; border: none; border-radius: 4px; cursor: pointer; font-size: 13px;" %>

    </li>
  <% end %>

</ol>

<a href="/articles/new"
   style="display: inline-block; margin-top: 20px; padding: 10px 15px; background: #28a745; color: white; text-decoration: none; border-radius: 4px; font-family: sans-serif;">
  Create New Article
</a>
