<h1 style="font-family: sans-serif; font-size: 28px; margin-bottom: 15px;">
  <%= @article.title %>
</h1>

<p style="font-family: sans-serif; font-size: 16px; margin-bottom: 30px; line-height: 1.4;">
  <%= @article.content %>
</p>


<%= form_with model: [@article, @article.comments.build],
              style: "padding: 20px; border: 1px solid #ccc; border-radius: 6px; width: 400px; background: #f9f9f9; font-family: sans-serif; margin-bottom: 30px;" do |f| %>

  <div style="margin-bottom: 15px;">
    <%= f.label :body, "New Comment", style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= f.text_area :body,
                    style: "width: 100%; height: 80px; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div>
    <%= f.submit "Add Comment",
                 style: "background: #007bff; color: white; padding: 8px 14px; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>

<% end %>


<h2 style="font-family: sans-serif; font-size: 22px; margin-top: 30px; margin-bottom: 15px;">
  Comments
</h2>

<ul style="font-family: sans-serif; padding-left: 20px;">
  <% @article.comments.each do |comment| %>
    <li style="margin-bottom: 10px; font-size: 14px; color: #333;">
      <%= comment.body %>
    </li>
  <% end %>
</ul>


<footer style="margin-top: 40px; text-align: center; padding: 20px; font-family: sans-serif;">
  <a href="/articles"
     style="text-decoration: none; font-weight: bold; color: #28a745;">
    Back to Articles
  </a>
</footer>
